<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef ParentName="VQE_CryptoForgeBuildingBase">
		<defName>VQE_FrozenEmptyCryptosleepPod</defName>
		<label>empty ancient cryptosleep pod</label>
		<description>An old cryptosleep pod that has been opened. Whatever was inside is long gone.</description>
		<thingClass>Building</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0.5</fillPercent>
		<size>(1,2)</size>
		<rotatable>true</rotatable>
		<blockWind>true</blockWind>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0</Flammability>
			<WorkToBuild>2000</WorkToBuild>
		</statBases>
		<pathCost>42</pathCost>
		<graphicData>
			<texPath>Things/Misc/FrozenCryptosleepPod_Open</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,2)</drawSize>
		</graphicData>
		<costList>
			<ChunkSlagSteel>2</ChunkSlagSteel>
			<Steel>50</Steel>
			<Uranium>6</Uranium>
		</costList>
		<building>
			<paintable>false</paintable>
			<claimable>false</claimable>
			<neverBuildable>true</neverBuildable>
		</building>
	</ThingDef>
